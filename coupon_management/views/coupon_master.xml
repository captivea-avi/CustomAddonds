<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="coupon_master_list_view" model="ir.ui.view">
            <field name="name">coupon.master.list.view</field>
            <field name="model">coupon.master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="value"/>
                    <field name="generator_id"/>
                </tree>
            </field>
        </record>

        <record id="coupon_master_form_view" model="ir.ui.view">
            <field name="name">coupon.master.form.view</field>
            <field name="model">coupon.master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1 class="mb32">
                            <field name="name" placeholder="e.g. Too Coupon Code" class="mb16"/>
                        </h1>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="value"/>
                                <field name="generator_id"/>
                                <field name="coupon_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="coupon_master_action" model="ir.actions.act_window">
            <field name="name">Coupon Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">coupon.master</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="coupon_master_main_menu" action="coupon_master_action" parent="coupon_generator_main_menu"
                  name="Coupon Master" />

    </data>
</odoo>