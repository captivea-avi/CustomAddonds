<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="coupon_generator_list_view" model="ir.ui.view">
            <field name="name">coupon.generator.list.view</field>
            <field name="model">coupon.generator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="number_of_coupons"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_value"/>
                </tree>
            </field>
        </record>

        <record id="coupon_generator_form_view" model="ir.ui.view">
            <field name="name">coupon.generator.form.view</field>
            <field name="model">coupon.generator</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_generate_coupon_lines" string="Generate Coupon Lines" type="object"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <h1 class="mb32">
                            <field name="name" placeholder="e.g. Too Coupon Name" class="mb16"/>
                        </h1>
                        <group>
                            <group>
                                <field name="number_of_coupons"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <field name="total_value"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Coupon Ids" name="coupon_ids">
                                <field name="coupon_ids"/>
                            </page>
                            <page string="Customer Ids" name="customer_ids">
                                <field name="customer_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="coupon_generator_search_view" model="ir.ui.view">
            <field name="name">coupon.generator.search.view</field>
            <field name="model">coupon.generator</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="coupon_generator_kanban_view">
            <field name="name">coupon.generator.kanban.view</field>
            <field name="model">coupon.generator</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <templates>
                        <t t-name="kanban">
                            <div class="oe_kanban_global_click">
                                Name :
                                <field name="name"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="coupon_generator_action" model="ir.actions.act_window">
            <field name="name">Coupon Generator</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">coupon.generator</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="coupon_management_main_menu"
                  name="Coupon Management" groups="base.group_user"/>
        <menuitem id="coupon_generator_main_menu" action="coupon_generator_action"
                  parent="coupon_management_main_menu"
                  name="Coupon Generator" groups="base.group_user"/>

    </data>
</odoo>